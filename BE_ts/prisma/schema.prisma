generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  //url      = env("DATABASE_URL")
  url      = "mongodb://admin:password@localhost/patientor?authSource=admin"
}

